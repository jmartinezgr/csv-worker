# Worker Configuration
WORKER_ID=worker-001

# Job Configuration
JOB_ID=
FILE_PATH=

# MongoDB Configuration (URI completa incluyendo la base de datos)
# Ejemplo: mongodb://usuario:password@host:27017/nombre_base_datos
# O con Atlas: mongodb+srv://usuario:password@cluster.mongodb.net/nombre_base_datos
MONGO_URI=mongodb://localhost:27017/csv_database
# Nota: MONGO_COLLECTION ahora viene del endpoint /jobs/next en la respuesta del job

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...

# Backend API Configuration
BACKEND_URL=http://host.docker.internal:8000
API_SECRET=your-secret-key-here

# Processing Configuration (opcional, tienen valores por defecto)
BATCH_SIZE=50000
BLOCK_SIZE_BYTES=16777216
HEARTBEAT_INTERVAL=10
